@{
  Layout = "_Layout";
}
@using VendorOrder.Models;
<div class="jumbotron">
  <h1>Vendor Details</h1>
  <p>@Model["vendor"].Name</p>
  <p>@Model["vendor"].Description</p>
  <p>@Model["vendor"].Address</p>

  <h3>This Vendor's Orders:</h3>
  <ul>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Product</a></li>
    }
  </ul>


  <a href='/vendors/@Model["vendor"].Id/orders/new'><button type="button">Add a new Order</button></a>
  <a href='/vendors'><button type="button">Return to Vendor list</button></a>
</div>