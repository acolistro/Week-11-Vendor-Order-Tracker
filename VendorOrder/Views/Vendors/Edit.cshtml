@{
  Layout = "_Layout";
}


<div class="col-md-6 offset-md-3">
  <h2 class="text-center">Edit ORDER Details</h2>
  <form action="/vendor/update/@Model.Id" method="post">
  <div class="form-group">
    <label for="vendorName">Vendor Name</label>
    <input type="text" name="vendorName" class="form-control" value="@Model.Name">
  </div>
  <div class="form-group">
    <label for="description">Vendor Details</label>
    <input type="text" name="description" class="form-control" value="@Model.Genre">
  </div>
  <div class="form-group">
    <label for="address">Vendor Address</label>
    <input type="text" name="address" class="form-control" value="@Model.Address">
  </div>
  <button type="submit" class="btn btn-info btn-block">Update Vendor</button>
  </form>
</div>