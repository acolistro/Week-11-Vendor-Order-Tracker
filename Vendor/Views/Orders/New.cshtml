@{
  Layout = "_Layout";
}
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Add Order for @Model.Name</h1>
    <form action="/vendor/@Model.Id/order/create" method="post">
      <div class="form-group">


        <label for="title">Order Name</label>
        <input type="text" name="title" class="form-control">
      </div>
      <div class="form-group">
        <label for="description">Order Details</label>
        <input type="text" name="description" class="form-control">
      </div>
      <div class="form-group">
        <label for="price">Order Cost</label>
        <input type="text" name="price" class="form-control">
      </div>
        <input type="hidden" name="id" value="@Model.Id">
      <button type="submit" class="btn btn-primary btn-block">Add</button>
    </form>
  </div>
</div>