@{
  Layout = "_Layout";
}
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Edit ORDER for @Model["album"].Title</h1>
    <form action='/vendor/@Model["vendor"]/order/@Model["order"].Id/update' method="post">
      <div class="form-group">
        <label for="title">ORDER Name</label>
        <input type="text" name="title" class="form-control" value='@Model["order"].Title'>
      </div>
      <div class="form-group">
        <label for="description">ORDER details</label>
        <input type="text" name="description" class="form-control" value='@Model["order"].Description'>
      </div>
      <div class="form-group">
        <label for="Price">ORDER Cost</label>
        <input type="text" name="price" class="form-control" value='@Model["order"].Price'>
      </div>
        <input type="hidden" name="id" value='@Model["vendor"]'>
        <input type="hidden" name="vendorId" value='@Model["order"].Id'>
      <button type="submit" class="btn btn-primary btn-block">Add</button>
    </form>
  </div>
</div>